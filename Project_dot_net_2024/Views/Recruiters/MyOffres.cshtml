@model IEnumerable<Project2024.Models.Offre>

@{
    ViewBag.Title = "MyOffres";
}



<div class="container p-0">
    <p>

        <a href="@Url.Action("AddOffre", "Recruiters")" class="btn btn-outline-primary ml-1">
            ajouter offre
        </a>
    </p>
    <div class="table-responsive">
        <table class="table  table-striped table-bordered">
            <tr class="table-success">
                <th>
                    @Html.DisplayNameFor(model => model.OffreID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recruiter.RecruiterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContractType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sector)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remuneration)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OffreID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recruiter.RecruiterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sector)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Profile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Post)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remuneration)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Offres",new { id = item.OffreID })" class="btn btn-outline-primary ml-1">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Offres",new { id = item.OffreID })" class="btn btn-outline-danger ml-1">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                            <a href="@Url.Action("Details", "Offres",new { id = item.OffreID })" class="btn btn-outline-success ">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>

                        </td>
                    </tr>
                

            }

        </table>
    </div>
</div>

        
      
