<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ERecriut</title>
    <link rel="icon" href="~/Assets/img/rec.png" type="image/png">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="font-family: cursive; background-color: aliceblue " class="">
    @*#f3eeee6d*@

    <nav class="navbar navbar-expand-lg navbar-light   " style="background-color:aliceblue">
        <div class="container ">
            <a class="navbar-brand fw-bold w-50"
               href="@Url.Action("Index", "Home") ">
                <span class="text-primary">E</span><span class="text-success">-recruit</span><span class="text-primary">.ma</span>
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse position-relative" id="navbarSupportedContent">
                @if (Session["RecruiterID"] != null || Session["CandidateID"] != null)
                {
                    if (Session["RecruiterID"] != null)
                    {
                        <div class="dropdown ms-auto" style="margin-inline:auto 100px">
                            <a href="#" style="font-size:20px; color:#dcd8d8; padding:0px" class="dropdown-toggle" data-bs-toggle="dropdown" type="button" aria-expanded="true">
                                <img class="" src="https://www.wetech.ma/images/60/H.jpg"
                                     title="..." width="30px" height="30px"
                                     style="margin-top:-5px;margin-left:0px" border="0" align="absmiddle">

                            </a>
                            <ul class="dropdown-menu ">
                                <li><a class="dropdown-item active" href="@Url.Action("DetailsProfile", "Recruiters")">Profile</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("AddOffre", "Recruiters")">Ajouter Offres</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyOffres", "Recruiters")">Mes Offres</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("ConsulteCandidates", "Recruiters")">Postulates</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger fw-semibold" href="@Url.Action("Logout", "Recruiters")">deconnection</a></li>
                            </ul>
                        </div>

                    }
                    else
                    {

                        <div class="dropdown ms-auto " style="margin-inline:auto 100px">

                            <a href="#" style="font-size:20px; color:#dcd8d8; padding:0px" class="dropdown-toggle" data-bs-toggle="dropdown" type="button" aria-expanded="true">
                                <img class="" src="https://www.wetech.ma/images/60/H.jpg"
                                     title="..." width="30px" height="30px"
                                     style="margin-top:-5px;margin-left:0px" border="0" align="absmiddle">

                            </a>

                            <ul class="dropdown-menu  bg-white">
                                <li><a class="dropdown-item active" href="@Url.Action("DetailsProfile", "Candidates")">Profile</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Recherche", "Candidates")">Ajouter Offres</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyOffres", "Candidates")">Mes Candidatures</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger fw-semibold" href="@Url.Action("Logout", "Candidates")">se deconnecter</a></li>
                            </ul>
                        </div>
                    }

                }

                @if (Session["RecruiterID"] == null && Session["CandidateID"] == null)
                {
                    <form class="d-lg-flex ms-lg-auto">

                        <a href="@Url.Action("Login", "Candidates")" class="btn text-primary me-4"><i class="fa-solid fa-user-lock"></i> Se connecter</a>


                        <a href="@Url.Action("Register", "Candidates")" class="btn text-success "><i class="fa-solid fa-user-plus"></i> S'inscrire</a>

                    </form>
                }

            </div>
    </nav>

    <div class="navbar navbar-expand" style="background-color: #025faf">
        <div class="container bg-white">
            <ul class="navbar-nav mb-2 fw-semibold text-black">
                <li>
                    <a href="@Url.Action("Index", "Home") " class="nav-link">
                        Acceuil
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Offres")" class="nav-link">
                        Offres
                    </a>
                </li>
                <li>
                <li>
            </ul>
            <form class="d-flex col" role="search ">
                @if (Session["RecruiterID"] == null && Session["CandidateID"] == null)
                {
                    <a href="@Url.Action("Login", "Recruiters")" class="btn btn-outline-primary ms-auto">
                        Accès recruteurs
                    </a>
                }
                else
                {

                }

            </form>
        </div>
    </div>



    <div class="body-content">
        @RenderBody()
        <hr />
        <footer class="bg-light text-center">
            <!-- Grid container -->
            <div class="container p-4 pb-0"
                 style="background-color: rgb(255, 255, 255)">
                <!-- Section: Social media -->
                <section class="mb-4">
                    <!-- Facebook -->
                    <a data-mdb-ripple-init
                       class="btn text-white btn-floating m-1"
                       style="background-color: #3b5998"
                       href="#!"
                       role="button">
                        <i class="fab fa-facebook-f"></i>
                    </a>

                    <!-- Twitter -->
                    <a data-mdb-ripple-init
                       class="btn text-white btn-floating m-1"
                       style="background-color: #55acee"
                       href="#!"
                       role="button">
                        <i class="fab fa-twitter"></i>
                    </a>

                    <!-- Google -->
                    <a data-mdb-ripple-init
                       class="btn text-white btn-floating m-1"
                       style="background-color: #dd4b39"
                       href="#!"
                       role="button">
                        <i class="fab fa-google"></i>
                    </a>

                    <!-- Instagram -->
                    <a data-mdb-ripple-init
                       class="btn text-white btn-floating m-1"
                       style="background-color: #ac2bac"
                       href="#!"
                       role="button">
                        <i class="fab fa-instagram"></i>
                    </a>

                    <!-- Linkedin -->
                    <a data-mdb-ripple-init
                       class="btn text-white btn-floating m-1"
                       style="background-color: #0082ca"
                       href="#!"
                       role="button">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <!-- Github -->
                    <a data-mdb-ripple-init
                       class="btn text-white btn-floating m-1"
                       style="background-color: #333333"
                       href="#!"
                       role="button">
                        <i class="fab fa-github"></i>
                    </a>
                </section>
                <!-- Section: Social media -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3 fw-semibold"
                 style="background-color: aliceblue">
                © 2024 Copyright:
                <a class="text-body" href="#">ASP.NET.com</a>
            </div>
            <!-- Copyright -->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
