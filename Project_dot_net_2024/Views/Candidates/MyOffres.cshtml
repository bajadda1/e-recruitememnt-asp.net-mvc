@model IEnumerable<Project2024.Models.Offre>

@{
    ViewBag.Title = "MyOffres";
}



<div class="container p-0">
    <p>
        <a class="btn btn-outline-primary" href="@Url.Action("Index", "Offres")">
            <i class="fa-solid fa-circle-plus"></i>
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr class="table-success">
                <th>
                    @Html.DisplayNameFor(model => model.Recruiter.RecruiterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContractType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sector)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remuneration)
                </th>
                <th class=""></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Recruiter.RecruiterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContractType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sector)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Post)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remuneration)
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete", "Candidates", new { id = item.OffreID })">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>

                </tr>
            }

        </table>
    </div>
</div>
      
